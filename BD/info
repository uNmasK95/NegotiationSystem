-- portas --
utilizadores 12346
acoes 12347
banco 12348

-- --

initdb -D utilizadores
postgres -D utilizadores/ -k. -p 12346
createdb -h localhost -p 12346
psql -h localhost -p 12346 -a -f BD_Tabelas_Utilizadores.sql

initdb -D acoes
postgres -D acoes/ -k. -p 12347
createdb -h localhost -p 12347
psql -h localhost -p 12347 -a -f BD_Tabelas_Acoes.sql

initdb -D banco
postgres -D banco/ -k. -p 12348
createdb -h localhost -p 12348
psql -h localhost -p 12348 -a -f BD_Tabelas_Banco.sql

